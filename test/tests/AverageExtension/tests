[Tests]
  issues = '#251'
  design = 'AverageExtension.md'

  [AverageExtension]
    requirement = "AverageExtension computes the average extension between two sets of points specified in two arrays: `first_point` and `last_point`. It should result in error when sizes of `first_point` and `last_point` do not match and size of `first_point` is zero "
    [first_point_last_point_size_match_error]
      type = 'RunException'
      input = 'AverageExtension.i'
      expect_err = "Sizes of 'first_point' and 'last_point' arrays must match and be postive."
      cli_args = "Postprocessors/avg_extension/first_point='60.0 0.0 0.0'"
      allow_test_objects = True
      detail = "The AverageExtension shall generate an error if sizes of 'first_point' and 'last_point' are different"
    []
    [first_point_size_zero_error]
      type = 'RunException'
      input = 'AverageExtension.i'
      expect_err = "Sizes of 'first_point' and 'last_point' arrays must match and be postive."
      cli_args = "Postprocessors/avg_extension/first_point='' Postprocessors/avg_extension/last_point=''"
      allow_test_objects = True
      detail = "The AverageExtension shall generate an error if size of 'first_point' is zero"
    []
  []
[]
